# ------------------------------------------------------------------------------
# General Aliases
# ------------------------------------------------------------------------------
alias vim="nvim"

# ------------------------------------------------------------------------------
# Bat (better cat)
# ------------------------------------------------------------------------------
alias co="bat"

# ------------------------------------------------------------------------------
# Git Aliases
# ------------------------------------------------------------------------------
alias gs='git status'
alias gd='git diff'
alias gds='git diff --staged'
alias ga='git add -A'
alias gu='git add -u'
alias gap='git add -p'
alias gc='git commit'
alias gp='git pull'
alias gl='git log --oneline --graph --decorate'
alias grs='git restore --staged .'
alias gpo='git push'
alias gco='git checkout'
alias gsh='git stash'
alias gshp='git stash pop'

# ------------------------------------------------------------------------------
# Eza (better ls)
# ------------------------------------------------------------------------------
alias ls="eza -l --git --git-repos --icons=always --color=always --color-scale=all --color-scale-mode=gradient --no-time --no-user --no-permissions --no-filesize"
alias ll="eza -lao --git --git-repos --icons=always --color=always --color-scale=all --color-scale-mode=gradient --no-permissions"

# ------------------------------------------------------------------------------
# Neovim
# ------------------------------------------------------------------------------
alias nv='NVIM_APPNAME="nvim-new" vim'

# ------------------------------------------------------------------------------
# lazygit
# ------------------------------------------------------------------------------
alias lg="lazygit"

# ------------------------------------------------------------------------------
# Clipboard
# ------------------------------------------------------------------------------
pbc() {
    cat "$1" | pbcopy
}

# ------------------------------------------------------------------------------
# Database
# ------------------------------------------------------------------------------
alias dblogin='pgcli postgresql://admin:admin123@localhost:5432/qg-sentinel'
